<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="ProjectJPAPU" transaction-type="RESOURCE_LOCAL">
		<class>com.entity.Article</class>
		<class>com.entity.Artisan</class>
		<class>com.entity.Category</class>
		<class>com.entity.Commande</class>
		<class>com.entity.Commentaire</class>
		<class>com.entity.Facture</class>
		<class>com.entity.OrderDetail</class>
		<class>com.entity.OrdredProduct</class>
		<class>com.entity.Panier</class>
		<class>com.entity.Stock</class>
		<class>com.entity.User</class>
	 <properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/walidDatabase"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value=""/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
	</persistence-unit>
